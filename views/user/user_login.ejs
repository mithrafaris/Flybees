<%- include('../include/login-header') %>
<link rel="stylesheet" type="text/css" href="/css/outer.css">
<link rel="icon" type="image/png" href="/images/icons/favicon.png"/>
<div class="row">
    <div class="col-md-6 mx-auto p-0">
        <div class="card">
            <div class="login-box">
                <div class="row">
                    <div class="login-snip">
                        <input id="tab-1" type="radio" name="tab" class="sign-in" checked>
                        <label for="tab-1" class="tab">Login</label>
                        <input id="tab-2" type="radio" name="tab" class="sign-up">
                        <label for="tab-2" class="tab">Sign Up</label>
                        <div class="login-space">
                            <div class="login">
                                <!-- Login Form -->
                                <form onsubmit="return validateLogin()">
                                    <div class="group">
                                        <label for="login-user" class="label">Username</label>
                                        <input id="login-user" type="text" class="input" placeholder="Enter your Username">
                                    </div>
                                    <!-- <div class="group">
                                        <label for="login-email" class="label">Email</label>
                                        <input id="login-email" type="email" class="input" placeholder="Enter your email">
                                    </div> -->
                                    <div class="group">
                                        <label for="login-pass" class="label">Password</label>
                                        <input id="login-pass" type="password" class="input" data-type="password" placeholder="Enter your password">
                                    </div>
                                    <div class="group">
                                        <input id="login-check" type="checkbox" class="check" checked>
                                        <label for="login-check"><span class="icon"></span> Keep me Signed in</label>
                                    </div>
                                    <div class="group">
                                        <input type="submit" class="button" value="Sign In">
                                    </div>
                                </form>
                                <!-- End Login Form -->
                                <div class="hr"></div>
                                <div class="foot">
                                    <a href="/otp">Forgot Password?</a>
                                </div>
                            </div>
                            <div class="sign-up-form">
                                <!-- Sign Up Form -->
                                <form onsubmit="return validateSignUp()">
                                    <div class="group">
                                        <label for="signup-user" class="label">Username</label>
                                        <input id="signup-user" type="text" class="input" placeholder="Create your Username">
                                    </div>
                                    <div class="group">
                                        <label for="signup-pass" class="label">Password</label>
                                        <input id="signup-pass" type="password" class="input" data-type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required placeholder="Create your password">
                                    </div>
                                    <div class="group">
                                        <label for="repeat-pass" class="label">Repeat Password</label>
                                        <input id="repeat-pass" type="password" class="input" data-type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required placeholder="Repeat your password">
                                    </div>
                                    <!-- <div class="group">
                                        <label for="gender" class="label">gender</label>
                                        Male 
                                        <input type="radio" checked=true name="user_gender"> 
                                        Female 
                                        <input type="radio"  name="user_gender"> 
                                        
                                    </div> -->
                                    <div class="group">
                                        <label for="number" class="label">Phone Number</label>
                                        <input id="number" type="text" class="input" placeholder="Enter your phone number">
                                    </div>
                                    <div class="group">
                                        <input type="submit" class="button" value="Sign Up">
                                        <div class="foot">
                                            <a href="/user_login">Already Member?</a>
                                        </div>
                                    </div>
                                </form>
                                <!-- End Sign Up Form -->
                                <div class="hr"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function validateLogin() {
        
        var username = document.getElementById("login-user").value;
        var password = document.getElementById("login-pass").value;

        if (username === "" || password === "") {
            alert("Please fill in all the fields.");
            return false;
        }
        if (username.indexOf('@') <= 0 || username.lastIndexOf('.') <= username.indexOf('@')) {
            alert("Invalid email address.");
            return false;
        }

        alert("Login successful!");
        return true;
    }
